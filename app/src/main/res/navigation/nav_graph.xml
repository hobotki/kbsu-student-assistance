<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.snakelord.pets.kbsustudentassistance.presentation.login.LoginFragment"
        android:label="LoginFragment">

        <action
            android:id="@+id/action_loginFragment_to_scheduleFragment"
            app:destination="@id/scheduleFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popUpTo="@+id/nav_graph"
            app:popUpToInclusive="true" />

    </fragment>

    <fragment
        android:id="@+id/scheduleFragment"
        android:name="com.snakelord.pets.kbsustudentassistance.presentation.schedule.ScheduleFragment"
        android:label="ScheduleFragment" />

    <fragment
        android:id="@+id/mapFragment"
        android:name="com.snakelord.pets.kbsustudentassistance.presentation.map.MapFragment"
        android:label="MapFragment" />
</navigation>