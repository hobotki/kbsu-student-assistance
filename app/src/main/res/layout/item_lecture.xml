<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:layout_marginVertical="@dimen/item_lecture_vertical_margin"
        android:layout_marginStart="@dimen/item_lecture_horizontal_margin"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/item_lecture_card_corner_radius">

        <LinearLayout
            android:orientation="vertical"
            android:padding="@dimen/default_margin"
            android:elevation="@dimen/item_lecture_minimal_elevation"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/lectureName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Теория планирования эксперемента"
                style="@style/PrimaryTextStyle" />

            <TextView
                android:id="@+id/teacherName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/text_margin_top"
                tools:text="Крымшокалова Д.А"
                style="@style/SecondaryTextStyle" />

            <TextView
                android:id="@+id/classroom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/text_margin_top"
                tools:text="@string/classroom_placeholder"
                style="@style/ClickableTextStyle" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginVertical="@dimen/item_lecture_vertical_margin"
        android:layout_marginHorizontal="@dimen/item_lecture_horizontal_margin"
        app:cardBackgroundColor="@color/colorSecondary"
        app:cardCornerRadius="@dimen/item_lecture_card_corner_radius">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/startTime"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                tools:text="9:00"
                style="@style/TimeTextStyle"/>

            <TextView
                android:id="@+id/endTime"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                tools:text="10:45"
                style="@style/TimeTextStyle"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>