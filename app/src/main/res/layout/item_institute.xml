<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_margin"
    android:background="@drawable/common_item_shape"
    android:elevation="@dimen/cardview_default_elevation"
    android:orientation="vertical">

    <TextView
        android:id="@+id/institute_text_view"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin"
        android:layout_marginHorizontal="@dimen/default_margin"
        tools:text="Институт физики и математики"
        style="@style/PrimaryTextStyle"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/lectures_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/default_margin"
        android:layout_marginTop="@dimen/lectures_recycler_view_top_margin"
        tools:itemCount="2"
        tools:listitem="@layout/item_lecture_minimal" />

    <Button
        android:id="@+id/open_on_map_button"
        android:text="@string/open_on_map"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/default_margin"/>

    <Button
        android:id="@+id/make_a_path_button"
        android:text="@string/make_a_path"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/default_margin"
        android:layout_marginBottom="@dimen/default_margin"
        android:textColor="@color/colorPrimary"
        android:backgroundTint="?appBackgroundColor" />

</LinearLayout>
